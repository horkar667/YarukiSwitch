<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-8 mt-5">
        <div class="d-flex">
          <div class="col-1">
            <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "motivation.jpg", class: "rounded-circle", size:'100x100' %>
          </div>
          <div class="text-center col">
            (<%= @user.last_name_kana %> <%= @user.first_name_kana %>)
            <h1><%= @user.last_name %> <%= @user.first_name %></h1>
          </div>
        </div>
        <div class="d-flex border-top py-3 mt-3">
          <div class="col-3">ニックネーム</div>
          <div class="col"><%= @user.nickname %></div>
        </div>
        <div class="d-flex border-top py-3">
          <div class="col-3">紹介文</div>
          <div class="col"><%= @user.introduction %></div>
        </div>
        <div class="d-flex border-top py-3">
          <div class="col-3">メールアドレス</div>
          <div class="col"><%= @user.email %></div>
        </div>
        <div class="d-flex border-top py-3">
          <div class="col-3">ステータス</div>
          <div class="col">
            <% if @user.is_deleted == false %>
              <div class="text-primary">有効</div>
            <% else %>
              <div>退会</div>
            <% end %>
          </div>
          <div class="col-3">
            <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
              <%= f.select :is_deleted, [["有効", false], ["退会", true]] %>
              <%= f.submit '更新',class: "btn btn-outline-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>