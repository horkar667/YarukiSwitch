<% if user.is_followed_by?(current_user) %>
  <div class="mt-3">
    <%= link_to "フォロー外す", user_relationships_path(user), class: "text-danger", method: :delete, remote: true %>
  </div>
<% else %>
  <div class="mt-3">
    <%= link_to "フォローする", user_relationships_path(user), class: "text-success", method: :post, remote: true %>
  </div>
<% end %>