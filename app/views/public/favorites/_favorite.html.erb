<% if word.favorited_by?(current_user) %>
  <p>
    <%= link_to word_favorites_path(word), method: :delete, remote: true do %>
      <i class="fas fa-heart" style="color:red;"><%= word.favorites.count %></i>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to word_favorites_path(word), method: :post, remote: true do %>
      <i class="fas fa-heart"><%= word.favorites.count %></i>
    <% end %>
  </p>
<% end %>