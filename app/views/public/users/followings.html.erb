<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-10">
        <h1 class="text-center mt-5">フォロー</h1>
        <% if @user.followings.count >=  1 %>
            <table class="table">
              <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
            <% @users.each do |user| %>
              <tbody>
                <tr>
                  <td><%= attachment_image_tag user, :image, :fill, 40, 40, format: 'jpeg', fallback: "motivation.jpg", size:'40x40' %></td>
                  <td>
                    <% if user.nickname %>
                      <%= user.nickname %>
                    <% else %>
                      <%= user.last_name %> <%= user.first_name %>
                    <% end %>
                  </td>
                  <td>フォロー数:<%= user.followings.count %></td>
                  <td>フォロワー数<%= user.followers.count %></td>
                  <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>
</main>