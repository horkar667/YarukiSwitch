<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-9 col-sm-6 col-lg-5 col-xl-4">
        <h2 class="mt-5">プロフィール編集</h2>
        <%= form_with model:@user, url: user_path(current_user), method: :patch, local:true do |f| %>
          <div class="form-group">
            <%= f.label :ニックネーム %><br>
            <%= f.text_field :nickname, autofocus: true, class: "form-control book_name" %>
          </div>
          <div class="form-group">
            <%= f.label :画像 %><br>
            <%= f.attachment_field :image %>
          </div>
          <div class="form-group">
            <%= f.label :自己紹介 %><br>
            <%= f.text_area :introduction, autofocus: true, class: "form-control book_introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "プロフィール更新",class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>