<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-9 col-sm-6 col-lg-5 col-xl-4">
        <% if alert %>
          <div class="mt-3 alert alert-danger"><%= alert %></div>
        <% end %>
        <h2 class="mt-5 mb-3">ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field mt-3">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %>
          </div>

          <div class="field mt-3">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", size: 30 %>
          </div>

          <!--<% if devise_mapping.rememberable? %>-->
          <!--  <div class="field">-->
          <!--    <%= f.check_box :remember_me %>-->
          <!--    <%= f.label :remember_me %>-->
          <!--  </div>-->
          <!--<% end %>-->

          <div class="actions mt-3">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</main>