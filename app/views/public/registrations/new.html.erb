<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-9 col-sm-6 col-lg-5 col-xl-7">
        <h2 class="mt-5 mb-3">アカウント作成</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <table class="table">
            <thead>
              <tr>
                <th>名前　　　　　　　　　　　</th>
                <th>
                  <div class="field">
                    <%= f.label :（姓） %>
                    <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name" %>
                  </div>
                </th>
                <th>
                  <div class="field">
                    <%= f.label :（名） %>
                    <%= f.text_field :first_name, autocomplete: "given-name" %>
                  </div>
                </th>
              </tr>
              <tr>
                <th>フリガナ</th>
                <th>
                  <div class="field">
                    <%= f.label :（セイ） %>
                    <%= f.text_field :last_name_kana, autocomplete: "family-name" %>
                  </div>
                </th>
                <th>
                  <div class="field">
                    <%= f.label :（メイ） %>
                    <%= f.text_field :first_name_kana, autocomplete: "given-name" %>
                  </div>
                </th>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <th>
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                </th>
              </tr>
              <tr>
                <th>
                  パスワード
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                  <% end %><br />
                </th>
                <th>
                  <div class="field">
                    <%= f.password_field :password, autocomplete: "new-password" %>
                  </div>
                </th>
              </tr>
              <tr>
                <th>パスワード(再確認)</th>
                <th>
                  <div class="field">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                  </div>
                </th>
              </tr>
              <tr>
                <td>
                  <div class="actions">
                    <%= f.submit "アカウント登録", class: "btn btn-success" %>
                  </div><br>
                  <p>既に登録済みの方<%= render "public/shared/links" %></p>
                </td>
              </tr>
            </thead>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</main>